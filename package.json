{
  "name": "e-garage-system-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:garage-api": "cross-env NODE_ENV=production node dist/apps/garage-api/src/main.js",
    "start:auth": "cross-env NODE_ENV=production node dist/apps/auth/src/main.js",
    "start:all": "concurrently \"pnpm run start:garage-api\" \"pnpm run start:auth\"",
    "start:dev:auth": "nest start auth --watch",
    "start:dev:garage-api": "nest start garage-api --watch",
    "start:dev:all": "node ./dist/apps/main",
    "start": "node dist/apps/main.js",
    "build": "nest build",
    "postbuild": "cp -R libs/common/src/email/template dist/libs/common/src/email/template/",
    "heroku-postbuild": "pnpm install --recursive && pnpm build && pnpm postbuild",
    "build:auth": "nest build auth",
    "build:garage-api": "nest build garage-api",
    "format": "prettier --write \"**/*.{js,ts,json,md,html,css,scss,yml}\"",
    "lint": "eslint \"**/*.ts\" --fix",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.717.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "joi": "^17.13.3",
    "multer": "1.4.5-lts.1",
    "nestjs-pino": "^4.1.0",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/common": "^10.4.13",
    "@nestjs/core": "^10.4.13",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/platform-express": "^10.4.11",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/testing": "^9.4.3",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "mongoose": "^7.8.3",
    "prettier": "^3.4.1",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2"
  },
  "engines": {
  "node": "20.x",
  "pnpm": "9.12.1"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
